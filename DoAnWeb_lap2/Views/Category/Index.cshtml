@model IEnumerable<DoAnWeb_lap2.Models.Category>
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col text-center">
            <h1>Category</h1>
        </div>
    </div>
</div>

<div class="container">
    <table class="table text-center">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cate in Model)
            {
                <tr>
                    <td>@cate.Name</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@cate.Id" class="btn btn-danger">Delete</a>
                        <a asp-action ="Update" asp-route-id="@cate.Id" class="btn btn-danger">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="container mb-4">
    <div class="row justify-content-center">
        <div class="col-auto">
            <a asp-action="Add" class="btn btn-primary">Add New Category</a>
        </div>
    </div>
</div>